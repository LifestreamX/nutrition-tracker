generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "cockroachdb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id                String             @id @default(cuid())
  email             String             @unique
  passwordHash      String?
  loginAttempts     Int                @default(0)
  lastLoginAttempt  DateTime?
  macroTargets      MacroTargets?
  themePreference   String?            @default("light")
  profileAvatar     String?
  selectedDate      String?
  foodLogs          FoodLog[] // Define a one-to-many relation between User and FoodLog
  submittedFoodLogs SubmittedFoodLog[]
  resetTokens       PasswordResetToken[]

}

model PasswordResetToken {
  id         String   @id @default(cuid())
  token      String   @unique
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
}

model MacroTargets {
  id       String  @id @default(cuid())
  user     User?   @relation(fields: [userId], references: [id])
  userId   String? @unique
  calories Float?
  protein  Float?
  carbs    Float?
  fats     Float?
}

model FoodLog {
  id            String  @id @default(cuid())
  user          User?   @relation(fields: [userId], references: [id])
  userId        String?
  calories      Float?
  carbs         Float?
  category      String?
  categoryLabel String?
  fats          Float?
  foodId        String?
  image         String?
  knownAs       String?
  label         String?
  CHOCDF        Float?
  ENERC_KCAL    Float?
  FAT           Float?
  FIBTG         Float?
  PROCNT        Float?
  protein       Float?
  quantity      Int?
  servingSizes  Json? // Adjust the type as needed
  nutrients     Json? // Adjust the type as needed
}

model SubmittedFoodLog {
  id           String   @id @default(cuid())
  foodLog      Json
  foodLogId    String
  selectedDate String
  createdAt    DateTime @default(now())

  // Define a relationship with the User model if needed
  user   User?   @relation(fields: [userId], references: [id])
  userId String?
}


